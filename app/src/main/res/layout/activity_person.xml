<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.ikure.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/serve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:gravity="center_horizontal"
            android:text="Patient Details"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:padding="8dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/patient_image"
            android:layout_below="@id/serve"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patient_image"
            android:id="@+id/linear"
            android:layout_marginTop="20dp"
            >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:id="@+id/name"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name here"
            android:textSize="24sp"
            android:id="@+id/pa_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@+id/name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear"
            android:id="@+id/linear1">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="AGE:"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:id="@+id/pid"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="ID here"
                android:textColor="@color/colorPrimary"
                android:id="@+id/pa_age"
                android:textSize="24sp"

                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1"
            android:id="@+id/linear2">

            <TextView
                android:id="@+id/services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:text="Phone :"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pa_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/name"
                android:hint="Last Service here"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear2"
            android:layout_marginTop="70dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ECG Reports"
                android:background="@color/colorback1"
                android:padding="2dp"
                android:id="@+id/ecg"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="prescriptions"
                android:id="@+id/pres"
                android:background="@color/colorback2"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>